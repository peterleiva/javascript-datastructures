{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "declarationDir": "./dist/types"
  },

  "include": ["src"]
}
